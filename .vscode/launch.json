{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}/functions",
            "name": "Mocha",
            "program": "${workspaceRoot}/functions/node_modules/mocha/bin/_mocha",
            "args": [
                "${workspaceRoot}/functions/lib/test/**/*.js"
            ],
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/functions/lib/test/**/*.js"],
            "console": "integratedTerminal"
        }
    ]
}